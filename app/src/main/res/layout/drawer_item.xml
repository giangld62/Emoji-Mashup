<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_drawer_item"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/home"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center|start"
        android:paddingHorizontal="16dp"/>

    <ImageView
        android:layout_marginStart="18dp"
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_drawer_icon"
        app:layout_constraintTop_toTopOf="@id/tv_drawer_item"
        app:layout_constraintBottom_toBottomOf="@id/tv_drawer_item"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_D8D8DC"
        android:layout_marginStart="56dp"
        app:layout_constraintTop_toBottomOf="@id/tv_drawer_item"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/go_to_icon"
        app:layout_constraintTop_toTopOf="@id/tv_drawer_item"
        app:layout_constraintBottom_toBottomOf="@id/tv_drawer_item"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>